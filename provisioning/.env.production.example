# ===============================================================================
# iFin Bank Verification System - Production Environment Variables
# 
# IMPORTANT: Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to version control!
# ===============================================================================

# =============================================================================
# Django Core Settings
# =============================================================================

# REQUIRED: Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE_ME_GENERATE_A_REAL_SECRET_KEY

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=ifinbank.com,www.ifinbank.com,localhost

# CSRF trusted origins (include https://)
CSRF_TRUSTED_ORIGINS=https://ifinbank.com,https://www.ifinbank.com

# =============================================================================
# Database (PostgreSQL)
# =============================================================================

POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
DATABASE_URL=postgres://ifinbank:${POSTGRES_PASSWORD}@db:5432/ifinbank

# =============================================================================
# Redis
# =============================================================================

REDIS_URL=redis://redis:6379/0

# =============================================================================
# vLLM / DeepSeek-OCR
# =============================================================================

VLLM_API_URL=http://vllm:8000
VLLM_MODEL_NAME=deepseek-ai/DeepSeek-OCR
VLLM_TIMEOUT=120
VLLM_MAX_TOKENS=8192

# =============================================================================
# ChromaDB
# =============================================================================

CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_COLLECTION=ifinbank_policies

# =============================================================================
# Feature Flags
# =============================================================================

USE_VLLM_OCR=true
USE_CHROMADB=true

# =============================================================================
# Verification Thresholds
# =============================================================================

VERIFICATION_AUTO_APPROVE=85.0
VERIFICATION_REVIEW=70.0
VERIFICATION_AUTO_REJECT=50.0

# =============================================================================
# Email Settings (Optional)
# =============================================================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@ifinbank.com

# =============================================================================
# Security Settings
# =============================================================================

# Set to True if behind HTTPS proxy
SECURE_SSL_REDIRECT=True
